    <script>
        function searchMentors() {
            const degree = document.getElementById("Degree").value;
            const domain = document.getElementById("Domain").value;
            const company = document.getElementById("Company").value;
            const experience = document.getElementById("Experience").value;

            if (!degree && !domain && !company && !experience) {
                alert("Please select at least one filter.");
                return;
            }

            const mentorData = { 
                Degree: degree,
                Domain: domain,
                Company: company,
                Experience: experience
            };

            fetch('/data', {  // Flask endpoint
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(mentorData)
            })
                .then(response => response.json())
                .then(data => {
                    console.log('Response from Python:', data);
                    displayResults(data);
                })
                .catch(error => {
                    console.error('Error:', error);
                    document.getElementById("results").innerHTML = "<p>Failed to fetch data. Please try again later.</p>";
                });
        }

        function displayResults(data) {
            const resultsDiv = document.getElementById("results");
            resultsDiv.innerHTML = "";

            if (!data || data.message) {
                resultsDiv.innerHTML = "<p>No matching alumni found.</p>";
                return;
            }

            data.forEach(alumnus => {
                const alumnusDiv = document.createElement("div");
                alumnusDiv.classList.add("result-card");
                alumnusDiv.innerHTML = `
                    <p><strong>${alumnus['First Name']} ${alumnus['Last Name']}</strong> - 
                    ${alumnus['Stream']}, ${alumnus['Domain of Expertise']}, 
                    ${alumnus['Current_Occupation Organization']}, 
                    ${alumnus['Level of Expertise']} </p>`;
                resultsDiv.appendChild(alumnusDiv);
            });
        }

        function openModal() {
            document.getElementById("registerModal").style.display = "flex";
        }

        function closeModal() {
            document.getElementById("registerModal").style.display = "none";
        }

        function submitAlumniDetails() {
            const name = document.getElementById("alumniName").value;
            const degree = document.getElementById("alumniDegree").value;
            const domain = document.getElementById("alumniDomain").value;
            const company = document.getElementById("alumniCompany").value;
            const experience = document.getElementById("alumniExperience").value;
            if (!name || !degree || !domain || !company || !experience) {
                alert("Please fill out all required fields.");
                return;
            }

            const alumniData = {
                Name: name,
                Degree: degree,
                Domain: domain,
                Company: company,
                Experience: experience
            };

            fetch("/register", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify(alumniData)
            })
                .then(response => response.json())
                .then(data => {
                    alert("Registration successful!");
                    closeModal();
                })
                .catch(error => {
                    alert("Registration failed.");
                    console.error("Error:", error);
                });
        }
    </script>
